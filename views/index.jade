html(ng-app="daikonApp",ng-controller="RootCtrl")
  head
    base(href=config.httpd.base)
    meta(http-equiv="Content-Type" content="text/html;charset=UTF-8")
    link(rel="stylesheet" href="public/bower_components/bootstrap/dist/css/bootstrap.css")
    link(rel="stylesheet" href="public/bower_components/bootstrap/dist/css/bootstrap-theme.css")
    link(rel="stylesheet",href="public/bower_components/angular-bootstrap/ui-bootstrap-csp.css")
    link(rel="stylesheet",href="public/bower_components/angular-tablesort/tablesort.css")
    link(rel="stylesheet",href="public/bower_components/json-formatter/dist/json-formatter.css")
    link(rel="stylesheet",href="public/bower_components/angular-loading-bar/build/loading-bar.css")
    link(rel="stylesheet",href="public/main.css")
    script(src="public/bower_components/jquery/dist/jquery.js")
    script(src="public/bower_components/moment/moment.js")
    script(src="public/bower_components/bootstrap/dist/js/bootstrap.js")
    script(src="public/bower_components/angular/angular.js")
    script(src="public/bower_components/angular-sanitize/angular-sanitize.js")
    script(src="public/bower_components/angular-route/angular-route.js")
    script(src="public/bower_components/angular-bootstrap/ui-bootstrap-tpls.js")
    script(src="public/bower_components/angular-filter/dist/angular-filter.js")
    script(src="public/bower_components/angular-tablesort/js/angular-tablesort.js")
    script(src="public/bower_components/json-formatter/dist/json-formatter.js")
    script(src="public/bower_components/angular-moment/angular-moment.js")
    script(src="public/bower_components/angular-loading-bar/build/loading-bar.js")
    script(src="public/bower_components/underscore/underscore.js")
    script(src="public/scripts/main.js")
    title(ng-bind='title')

  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          a.navbar-brand(href="home") Daikon
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-left
            li
              a(ng-href="app/list") Apps
            li
              a(ng-href="instance/list") Instances
            li
              a(ng-href="server/list") Servers
            li
              #title.navbar-text >>
                span(ng-bind='title')
          ul.nav.navbar-nav.navbar-right
            li(ng-class="{active:autoReload}")
              a#autoreload.glyphicon.glyphicon-time(ng-click="toggleAutoReload()")
                span(ng-if="autoReload" ng-bind="countdown")
            li
              a#reload.glyphicon.glyphicon-refresh(ng-click="$emit('reload')")

    #main.container-fluid(ng-view)
